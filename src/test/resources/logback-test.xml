<configuration>
    <!-- INFO only -->
    <appender name="INFO_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%highlight([Seâœ”] %msg [%logger{1}][%thread][%d{HH:mm:ss.SSS}]%n)</pattern>
        </encoder>
    </appender>

    <!-- other than INFO-->
    <appender name="NON_INFO_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>DENY</onMatch>
            <onMismatch>ACCEPT</onMismatch>
        </filter>
        <encoder>
            <pattern>%highlight([%-5level] %msg [%logger{1}][%thread][%d{HH:mm:ss.SSS}]%n)</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="INFO_CONSOLE"/>
        <appender-ref ref="NON_INFO_CONSOLE"/>
    </root>
</configuration>

